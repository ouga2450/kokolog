<div class="bg-base-200 text-base-content">

  <!-- ================= HERO (MOBILE) ================= -->
  <section class="relative overflow-hidden"
           data-controller="reveal">

    <!-- 背景（上部だけ見せる） -->
    <div class="absolute top-0 right-0 w-full h-64 pointer-events-none">
      <%= image_tag "title.png",
            class: "w-full h-full object-contain object-right opacity-90",
            alt: "" %>
    </div>

    <div class="relative z-10 px-6 pt-50 pb-10 space-y-8">

      <div class="badge badge-primary badge-outline w-fit"
           data-reveal-target="item">
        kocolog｜habit × mood
      </div>

      <h1 class="leading-tight"
          data-reveal-target="item">
        <span class="block text-3xl font-semibold">
          行動×気分で、
        </span>
        <span class="block mt-1 text-4xl font-extrabold text-primary">
          気分の流れが<br>
          見えてくる。
        </span>
      </h1>

    </div>
  </section>


  <!-- ================= EXPLAIN ================= -->
  <section class="bg-base-200 py-8"
           data-controller="reveal">
    <div class="px-6 space-y-4 text-center">

      <p class="text-base text-base-content/80 leading-loose"
         data-reveal-target="item">
        kocolog は、日々の気分と行動を記録し、<br>
        あとから自分の調子を振り返るためのアプリです。
      </p>

      <p class="text-sm text-base-content/60 leading-loose"
         data-reveal-target="item">
        頑張りを評価せず、<br>
        「どんなときに調子が良かったか」に気づくことを大切にしています。
      </p>

    </div>
  </section>


  <!-- ================= CTA (MOBILE) ================= -->
  <section class="bg-base-100 py-16"
           data-controller="reveal">
    <div class="px-6 text-center space-y-6">

      <h2 class="text-xl font-bold"
          data-reveal-target="item">
        今の気分を、<br>
        記録してみませんか
      </h2>

      <div class="flex flex-col gap-3"
           data-reveal-target="item">

        <%= link_to "はじめる",
              new_user_registration_path,
              class: "btn btn-primary w-full rounded-full" %>

        <%= link_to "ログイン",
              new_user_session_path,
              class: "btn btn-ghost w-full rounded-full" %>
      </div>

    </div>
  </section>


  <!-- ================= HOW TO (MOBILE) ================= -->
  <section class="bg-base-200 py-20"
           data-controller="reveal">

    <h2 class="text-2xl font-bold text-center mb-12"
        data-reveal-target="item">
      使い方はとてもシンプル
    </h2>

    <div class="space-y-12 px-6">

      <% [
        ["01", "いつでも気分登録", "思い立った瞬間に、今の気分を記録"],
        ["02", "行動登録", "よく行う行動をあらかじめ登録"],
        ["03", "行動実行", "行動と気分をつなげる"],
        ["04", "振り返る", "カレンダーやXで振り返り"]
      ].each do |step, title, body| %>

        <div class="space-y-2"
             data-reveal-target="item">

          <div class="text-primary font-semibold">
            STEP <%= step %>
          </div>

          <h3 class="text-lg font-bold">
            <%= title %>
          </h3>

          <p class="text-base-content/70">
            <%= body %>
          </p>

        </div>

      <% end %>
    </div>
  </section>


  <!-- ================= GRAPH (MOBILE) ================= -->
  <section class="bg-base-100 py-20"
           data-controller="reveal">
    <div class="px-6 space-y-6">

      <h2 class="text-2xl font-bold"
          data-reveal-target="item">
        気分の変化を、<br>
        見える形で
      </h2>

      <p class="text-base-content/70"
         data-reveal-target="item">
        行動の前後で変わる気分を、時間の流れとして振り返れます。
      </p>

      <%= image_tag "top/mood_graph.png",
            class: "rounded-xl shadow",
            alt: "気分の変化を可視化したグラフ",
            data: { reveal_target: "item" } %>
    </div>
  </section>


  <!-- ================= SHARE (MOBILE) ================= -->
  <section class="bg-base-200 py-20"
           data-controller="reveal">
    <div class="px-6 space-y-6">

      <h2 class="text-2xl font-bold"
          data-reveal-target="item">
        振り返りは、<br>
        シェアもできる
      </h2>

      <p class="text-base-content/70"
         data-reveal-target="item">
        振り返りの内容は、Xにそのままシェアできます。
      </p>

      <%= image_tag "top/x_share.png",
            class: "rounded-xl shadow border border-base-200",
            alt: "Xへのシェア投稿イメージ",
            data: { reveal_target: "item" } %>
    </div>
  </section>


  <!-- ================= END (MOBILE) ================= -->
  <section class="relative bg-base-200 py-24"
           data-controller="reveal">

    <div class="px-6 text-center space-y-8"
         data-reveal-target="item">
      <h2 class="text-2xl font-bold leading-relaxed">
        今日の気分と行動が、<br>
        明日の自分をつくっていく
      </h2>

      <div>
        <%= link_to "今すぐはじめる",
              new_user_registration_path,
              class: "btn btn-primary w-full rounded-full" %>
      </div>

    </div>
  </section>
</div>
