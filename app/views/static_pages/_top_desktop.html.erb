<div class="min-h-screen bg-base-200 text-base-content">

  <!-- ================= HERO ================= -->
  <section class="relative overflow-hidden">
    <div data-controller="parallax" class="absolute inset-0 bg-primary/10"></div>

    <div class="relative max-w-7xl mx-auto px-20 py-36 grid grid-cols-2 gap-24 items-center">

      <!-- LEFT -->
      <div data-controller="reveal" class="space-y-10">
        <div data-reveal-target="item" class="badge badge-primary badge-outline">
          kokolog｜habit × mood
        </div>

        <h1 data-reveal-target="item" class="text-6xl font-bold leading-tight">
          行動の前後で、<br>
          <span class="text-primary">こころの流れ</span>が見える
        </h1>

        <p data-reveal-target="item" class="text-lg text-base-content/70 leading-loose max-w-xl">
          習慣と感情の関係を記録し、<br>
          続く理由を「実感」として残すアプリ。
        </p>

        <!-- 修正版ボタン -->
        <div data-reveal-target="item" class="flex gap-6">
          <%= link_to new_user_registration_path,
                class: "btn btn-primary h-12 px-12 rounded-xl
                        transition-transform duration-200 ease-out
                        hover:scale-105 active:scale-95" do %>
            無料ではじめる
          <% end %>

          <%= link_to new_user_session_path,
                class: "btn btn-outline h-12 px-12 rounded-xl
                        transition-transform duration-200 ease-out
                        hover:scale-105 active:scale-95" do %>
            ログイン
          <% end %>
        </div>
      </div>

      <!-- RIGHT：体験 Swiper -->
      <div data-controller="reveal" data-reveal-target="item">
        <div class="swiper"
             data-controller="swiper"
             data-swiper-target="container">
          <div class="swiper-wrapper">
            <div class="swiper-slide"><%= image_tag "top/mood_input.png", class: "rounded-xl shadow" %></div>
            <div class="swiper-slide"><%= image_tag "top/today_habit.png", class: "rounded-xl shadow" %></div>
            <div class="swiper-slide"><%= image_tag "top/today_mood_logs.png", class: "rounded-xl shadow" %></div>
            <div class="swiper-slide"><%= image_tag "top/today_habit_logs.png", class: "rounded-xl shadow" %></div>
            <div class="swiper-slide"><%= image_tag "top/habit_list.png", class: "rounded-xl shadow" %></div>
            <div class="swiper-slide"><%= image_tag "top/log_list.png", class: "rounded-xl shadow" %></div>
          </div>
          <div class="swiper-pagination mt-6"></div>
        </div>
      </div>

    </div>
  </section>


  <!-- ================= グラフ枠 ================= -->
  <section class="bg-base-100 py-28">
    <div class="max-w-6xl mx-auto px-20 grid grid-cols-2 gap-16 items-center" data-controller="reveal">

      <div data-reveal-target="item" class="space-y-4">
        <h2 class="text-3xl font-bold">こころの変化を可視化</h2>
        <p class="text-base-content/70">
          週間・月間で、あなたの感情の流れを振り返れる機能を順次実装予定です。
        </p>
      </div>

      <div data-reveal-target="item"
           class="h-64 rounded-2xl border-2 border-dashed border-base-300
                  flex items-center justify-center text-sm text-base-content/50">
        グラフ表示エリア（近日追加）
      </div>

    </div>
  </section>


  <!-- ================= CTA ================= -->
  <section class="bg-primary text-primary-content py-28 text-center">
    <div data-controller="reveal" class="space-y-10">
      <h2 data-reveal-target="item" class="text-4xl font-bold">
        今日の一歩が、こころの未来をつくる
      </h2>

      <div data-reveal-target="item" class="flex justify-center gap-6">
        <%= link_to new_user_registration_path,
              class: "btn btn-secondary h-12 px-12 rounded-xl
                      transition-transform duration-200 ease-out
                      hover:scale-105 active:scale-95" do %>
          今すぐはじめる
        <% end %>
      </div>
    </div>
  </section>

</div>
