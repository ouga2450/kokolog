<div class="flex items-center gap-2 pt-3">
  <span class="text-sm font-semibold text-base-content">
    行動一覧
  </span>
  <div class="flex-1 h-px bg-base-content/10"></div>
</div>
<div class="grid grid-cols-1 gap-2 pt-2">
  <% progresses.each do |progress| %>

    <%= link_to habit_path(progress.habit, date: @date),
                data: { turbo_frame: "modal" },
                class: "block" do %>

      <div class="flex items-center gap-2 rounded-lg bg-base-200/60 px-3 py-2 text-sm
                  transition hover:bg-base-200/80 active:scale-[0.98]">

        <!-- アイコン -->
        <span class="text-base">
          <%= progress.habit.category&.icon %>
        </span>

        <!-- 行動名 -->
        <span class="flex-1 truncate font-medium text-base-content">
          <%= progress.habit.name %>
        </span>

        <!-- 状態 -->
        <% if progress.achieved? %>
          <span class="shrink-0 text-xs text-success">
            達成済 ✓
          </span>
        <% else %>
          <span class="shrink-0 text-xs text-base-content/60">
            <%= progress.total_value %>/<%= progress.target_value %>
          </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
