<div class="space-y-2">
  <% habit_logs.each do |log| %>
    <div class="rounded-lg bg-base-200/60 p-2 text-xs space-y-1">

      <div class="font-semibold">
        <%= log.habit.name %>
      </div>

      <div>
        行動前：<%= log.before_mood&.label || "—" %>
        ／ 行動後：<%= log.after_mood&.label || "—" %>
      </div>

      <div class="text-base-content/40">
        <%= l(log.started_at, format: :short) %>
      </div>

    </div>
  <% end %>
</div>
