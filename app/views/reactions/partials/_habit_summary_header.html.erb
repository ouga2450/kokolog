<div class="space-y-3 rounded-xl bg-base-200/60 px-4 py-3">

  <!-- 期間 -->
  <div class="flex items-center gap-1 text-xs text-base-content/50">
    <span class="opacity-70">📅</span>
    <span><%= summary.range_label %></span>
  </div>

  <!-- 達成率 -->
  <div class="flex items-end gap-2">
    <span class="text-3xl font-bold tracking-tight">
      <%= summary.achievement_rate || 0 %>%
    </span>
    <span class="text-xs text-base-content/60 mb-1">
      全体達成率
    </span>
  </div>

  <!-- 内訳 -->
  <div class="space-y-1 text-xs text-base-content/70">

    <div>
      実行数：
      <span class="font-medium text-base-content">
        <%= summary.total_performed %>
      </span>
      /
      <%= summary.total_target %>
      <span class="ml-1 text-base-content/40">
        （目標数を超えた実行を除く）
      </span>
    </div>

    <div>
      目標達成数：
      <span class="font-medium text-base-content">
        <%= summary.achieved_count %>
      </span>
      /
      <%= summary.total %>
    </div>

  </div>
</div>
