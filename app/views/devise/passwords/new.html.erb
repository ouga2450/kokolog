<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card bg-base-100 shadow-xl w-full max-w-sm">
    <div class="card-body space-y-4">
      <h2 class="text-xl font-bold text-center">パスワード再設定</h2>

      <%= form_with model: resource,
                    as: resource_name,
                    url: password_path(resource_name),
                    local: true,
                    html: { class: "space-y-3" } do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <!-- 新しいパスワード -->
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text text-xs font-medium">新しいパスワード</span>
          </div>
          <%= f.password_field :password,
                               class: "input input-bordered w-full",
                               required: true %>
        </label>

        <!-- パスワード確認 -->
        <label class="form-control w-full">
          <div class="label">
            <span class="label-text text-xs font-medium">パスワード確認</span>
          </div>
          <%= f.password_field :password_confirmation,
                               class: "input input-bordered w-full",
                               required: true %>
        </label>

        <div class="form-control mt-4">
          <%= f.button type: "submit",
                       class: "btn btn-primary w-full text-sm flex items-center justify-center gap-2" do %>
            <%= heroicon "check", options: { class: "w-4 h-4" } %>
            <span>パスワードを変更</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
