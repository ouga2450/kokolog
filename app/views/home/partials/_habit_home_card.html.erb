<div id="<%= dom_id(habit, :home) %>"
     class="w-[95%] mx-auto flex items-center justify-between rounded-xl bg-base-200 p-3 shadow-sm">

  <!-- 左側（カテゴリアイコン＋習慣名など） -->
  <div class="flex items-center gap-3">
    <span class="text-xl"><%= habit.category.icon %></span>

    <div>
      <p class="text-sm font-medium leading-none">
        <%= habit.name %>
      </p>
      <p class="text-xs text-base-content/60 mt-1">
        <%= "カテゴリ：#{habit.category.name}" %>
      </p>
    </div>
  </div>

  <!-- 右側（詳細 + 実行状態） -->
  <div class="flex items-center gap-2">

    <!-- 詳細モーダル -->
    <%= link_to "詳細",
          habit_path(habit, from: "home", dom_from: "home"),
          data: { turbo_frame: "modal" },
          class: "btn btn-outline btn-xs" %>

    <% if habit.executed_today? %>

      <!-- 実行済み表示 -->
      <div class="flex items-center gap-1 text-success text-sm font-medium">
        <%= heroicon "check-circle", options: { class: "h-4 w-4" } %>
        実行済み
      </div>

    <% else %>

      <!-- 未実行：実行ボタン（アイコンなし） -->
      <%= link_to "実行",
            new_habit_log_path(habit_id: habit.id, dom_from: "home", from: "new"),
            data: { turbo_frame: "modal" },
            class: "btn btn-primary btn-xs" %>

    <% end %>

  </div>

</div>
