<% case params[:dom_from] %>
<% when "home" %>
  <% if @habit_logs_exists_today %>
    <%= turbo_stream.update "habit_logs_home_empty","" %>
  <% end %>

  <%= turbo_stream.prepend "habit_logs_home" do %>
    <%= render "home/partials/card_habit_log_home", habit_log: @habit_log %>
  <% end %>

  <!-- 気分記録の差し替えメソッド -->
  <%= render_streams(@diffs, "home", log_exists: @mood_logs_exists_today) %>

<% when "index" %>
  <%= turbo_stream.update "habit_logs_index" do %>
    <%= render "logs/partials/card_habit_log_logs", habit_log: @habit_log %>
  <% end %>

  <!-- 気分記録の差し替えメソッド -->
  <%= render_streams(@diffs, "index", log_exists: @mood_logs_exists_today) %>

<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<%= turbo_stream.update "modal", "" %>
