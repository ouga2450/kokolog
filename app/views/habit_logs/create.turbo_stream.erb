<% case params[:dom_from] %>
<% when "home" %>
  <% if @habit_logs_exists_today %>
    <%= turbo_stream.update "habit_logs_home_empty","" %>
  <% end %>

  <%= turbo_stream.prepend "habit_logs_home" do %>
    <%= render "home/partials/card_habit_log_home", habit_log: @habit_log %>
  <% end %>

  <% if @mood_logs.present? %>
    <% if @mood_logs_exists_today %>
      <%= turbo_stream.update "mood_logs_home_empty","" %>
    <% end %>
    <% @mood_logs.each do |mood_log| %>
      <%= turbo_stream.prepend "mood_logs_home" do %>
        <%= render "home/partials/card_mood_log_home", mood_log: mood_log %>
      <% end %>
    <% end %>
  <% end %>

<% when "index" %>
  <%= turbo_stream.update "habit_logs_index" do %>
    <%= render "logs/partials/habit_log_index_card", habit_log: @habit_log %>
  <% end %>
<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<%= turbo_stream.update "modal", "" %>
