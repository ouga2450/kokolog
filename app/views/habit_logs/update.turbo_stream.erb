<% case params[:dom_from] %>
<% when "home" %>
  <%= turbo_stream.replace dom_id(@habit_log, :home) do %>
    <%= render "home/partials/card_habit_log_home", habit_log: @habit_log %>
  <% end %>

<% when "index" %>
  <%= turbo_stream.update "habit_logs_index" do %>
    <%= render "logs/partials/habit_log_index_card", habit_log: @habit_log %>
  <% end %>
<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<%= turbo_stream.update "modal", "" %>

<!-- mood_log#newを実行 -->
<% if @input_mood_after %>
  <%= turbo_stream.after "modal" do %>
    <script>
      Turbo.visit("<%= new_mood_log_path(habit_log_id: @habit_log.id) %>");
    </script>
  <% end %>
<% end %>
