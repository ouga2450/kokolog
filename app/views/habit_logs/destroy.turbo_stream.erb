<% case params[:dom_from] %>
<% when "home" %>
  <%= turbo_stream.remove dom_id(@habit_log, :home) %>

  <% if @habit_logs_count == 0 %>
    <%= turbo_stream.replace "habit_logs_home_empty" do %>
      <%= render "home/partials/empty_home_card", msg: "習慣ログ" %>
    <% end %>
  <% end %>

<% when "index" %>
  <%= turbo_stream.remove dom_id(@habit_log, :index) %>
<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<!-- replaceを使うとタグごと消えてモーダルが開けなくなるためupdateを使用 -->
<%= turbo_stream.update "modal", "" %>
