<div class="w-full max-w-md mx-auto">

  <div class="flex justify-between items-end mb-4">
    <h2 class="text-xl font-bold mb-4">記録一覧</h2>
  </div>

  <div class="space-y-6">
    <section class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <div class="space-y-3">
          <% @dates.each do |date| %>
            <%= link_to log_path(date), class: "block p-4 rounded-xl bg-base-200 shadow" do %>
              <div class="text-lg font-semibold"><%= l(date, format: :long) %></div>
              <div class="text-sm text-base-content/60">
                <%= %w(日 月 火 水 木 金 土)[date.wday] %>曜日
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
