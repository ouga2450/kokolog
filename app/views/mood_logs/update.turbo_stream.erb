<% case params[:dom_from] %>
<% when "home" %>

  <%= turbo_stream.replace dom_id(@mood_log, :home) do %>
    <%= render "home/partials/card_mood_log_home", mood_log: @mood_log %>
  <% end %>

<% when "index" %>
  <%= turbo_stream.replace dom_id(@mood_log, :index) do %>
    <%= render "logs/partials/mood_log_index_card", mood_log: @mood_log %>
  <% end %>
<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<%= turbo_stream.update "modal", "" %>
