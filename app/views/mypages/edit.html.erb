<%= form_with model: @user,
              url: mypage_path,
              method: :patch,
              local: true do |f| %>
  <div class="space-y-6">

    <!-- 名前 -->
    <div class="form-control">
      <%= f.label :name, "ユーザー名", class: "label-text text-sm font-semibold" %>
      <%= f.text_field :name,
        class: "input input-bordered w-full" %>
    </div>

    <!-- ボタン -->
    <div class="text-right">
      <button type="submit"
              class="btn btn-outline btn-sm">
        <%= heroicon "check", options: { class: "w-4 h-4" } %>
        登録する
      </button>
    </div>

  </div>
<% end %>
