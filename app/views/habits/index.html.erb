<div class="w-full max-w-md mx-auto">

  <div class="flex justify-between items-end mb-4">
    <h2 class="text-xl font-semibold">行動一覧</h2>
    <!-- 行動追加 -->
    <%= link_to new_habit_path,
        class: "btn btn-primary btn-sm gap-1 rounded-full flex items-center" do %>
      <%= heroicon "plus", variant: :outline, options: { class: "h-4 w-4" } %>
      行動追加
    <% end %>
  </div>

  <div class="space-y-6">
    <!-- 有効 -->
    <section class="card bg-base-100 shadow-sm border-l-2 border-primary/60">
      <div class="card-body">
        <h3 class="text-lg font-bold">セット中</h3>

        <!-- Daily -->
        <%= render "habits/partials/frequency_block",
                   title: "毎日",
                   habits: @daily_habits %>

        <!-- Weekly -->
        <%= render "habits/partials/frequency_block",
                   title: "毎週",
                   habits: @weekly_habits %>

        <!-- Monthly -->
        <%= render "habits/partials/frequency_block",
                   title: "毎月",
                   habits: @monthly_habits %>
      </div>
    </section>

    <!-- 下書き -->
    <%= render "habits/partials/section",
              title: "下書き",
              habits: @draft_habits,
              empty_message: "下書きの行動はありません。",
              archived: false %>

    <!-- 削除済み -->
    <%= render "habits/partials/section",
              title: "削除済み",
              habits: @discarded_habits,
              empty_message: "削除された行動はありません。",
              archived: true %>

  </div>
</div>
