<div id="<%= dom_id(habit, :index) %>"
     class="w-[95%] mx-auto card bg-base-200 shadow-sm border border-base-200 rounded-xl p-4">

  <!-- タイトル行 -->
  <div class="flex gap-2 items-center mb-2">
    <div class="text-2xl">
      <%= habit.category.icon %>
    </div>
    <h3 class="text-base font-semibold text-base-content">
      <%= habit.name %>
    </h3>
  </div>

  <!-- 左右レイアウト -->
  <div class="flex justify-between items-start">

    <!-- 左側：情報 -->
    <div class="basis-2/3 space-y-1">
      <p class="text-sm text-base-content/70">
        <span class="font-semibold text-base-content">カテゴリ：</span>
        <%= habit.category.name %>
      </p>

      <p class="text-sm text-base-content/70">
        <span class="font-semibold text-base-content">目標：</span>
        <%= habit.goal.display_goal %>
      </p>

      <p class="text-sm text-base-content/70 flex items-center">
        <span class="font-semibold text-base-content">期間：</span>
        <span class="text-xs"><%= habit.goal.display_period %></span>
      </p>
    </div>

    <!-- 右側：操作 -->
    <div class="basis-1/3 flex flex-col items-end space-y-1">
      <%= render "habits/partials/card_actions",
                 habit: habit,
                 archived: archived %>
    </div>
  </div>
</div>
