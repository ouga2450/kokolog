<% case params[:from] %>
<% when "home" %>
  <%= turbo_stream.remove dom_id(@habit, :home) %>

  <% if @none_flag %>
    <%= turbo_stream.replace "habits_home_#{params[:tab]}_empty" do %>
      <%= render "home/partials/empty_card_home", msg: "習慣" %>
    <% end %>
  <% end %>

<% when "index" %>
  <%= turbo_stream.remove dom_id(@habit, :index) %>
<% end %>

<%= turbo_stream.update "flash_area" do %>
  <%= render "shared/flash" %>
<% end %>

<!-- モーダルを閉じる -->
<!-- replaceを使うとタグごと消えてモーダルが開けなくなるためupdateを使用 -->
<%= turbo_stream.update "modal", "" %>
