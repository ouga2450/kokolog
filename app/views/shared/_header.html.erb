<header class="navbar bg-base-100 border-b shadow-sm px-4">
  <div class="flex-1">
    <%= link_to "kokolog", root_path, class: "btn btn-ghost normal-case text-xl font-semibold" %>
  </div>

  <!-- PC表示: メニュー -->
  <div class="hidden md:flex gap-2">
    <%= link_to "ホーム", root_path, class: "btn btn-ghost" %>
    <%= link_to "ログイン", "#", class: "btn btn-ghost" %>
    <%= link_to "新規登録", "#", class: "btn btn-primary" %>
  </div>

  <!-- モバイル表示: ハンバーガー -->
  <div class="dropdown dropdown-end md:hidden">
    <div tabindex="0" role="button" class="btn btn-ghost btn-square">
      <!-- Heroiconのハンバーガーアイコン -->
      <%= heroicon "bars-3", options: { class: "w-6 h-6" } %>
    </div>
    <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-40">
      <li><%= link_to "ホーム", root_path %></li>
      <li><%= link_to "ログイン", "#" %></li>
      <li><%= link_to "新規登録", "#" %></li>
    </ul>
  </div>
</header>
