<footer class="btm-nav fixed bottom-0 left-0 w-full z-40 bg-base-100 border-t border-base-200 text-sm h-16 pb-[env(safe-area-inset-bottom)]">
  <div class="w-full max-w-lg mx-auto flex justify-evenly items-center px-4">

    <!-- ホーム -->
    <%= link_to home_path, class: "flex flex-col items-center justify-center gap-1 py-2" do %>
      <%= heroicon "home", options: { class: "w-5 h-5" } %>
      <span class="text-xs">ホーム</span>
    <% end %>

    <!-- 習慣管理 -->
    <%= link_to habits_path, class: "flex flex-col items-center justify-center gap-1 py-2" do %>
      <%= heroicon "arrow-path", options: { class: "w-5 h-5" } %>
      <span class="text-xs">習慣</span>
    <% end %>

    <!-- ログ（カレンダー＋振り返り統合） -->
    <%= link_to logs_path, class: "flex flex-col items-center justify-center gap-1 py-2" do %>
      <%= heroicon "calendar-days", options: { class: "w-5 h-5" } %>
      <span class="text-xs">ログ</span>
    <% end %>

  </div>
</footer>
