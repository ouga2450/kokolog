<html lang="ja" data-theme="kocolog">
  <head>
    <% if Rails.env.production? %>
      <!-- Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=<%= ENV['GA_MEASUREMENT_ID'] %>"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '<%= ENV['GA_MEASUREMENT_ID'] %>');
      </script>
    <% end %>

    <title><%= content_for?(:title) ? yield(:title) : "kocolog" %></title>

    <meta property="og:title" content="<%= content_for?(:og_title) ? yield(:og_title) : 'kocolog' %>">
    <meta property="og:description" content="<%= content_for?(:og_description) ? yield(:og_description) : '行動と気分を記録するアプリ' %>">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="kocolog">
    <meta property="og:url" content="<%= request.base_url + request.path %>">
    <meta property="og:image" content="<%= request.base_url %>/ogp.png">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= content_for?(:og_title) ? yield(:og_title) : 'kocolog' %>">
    <meta name="twitter:description" content="<%= content_for?(:og_description) ? yield(:og_description) : '行動と気分を記録するアプリ' %>">
    <meta name="twitter:image" content="<%= request.base_url %>/ogp.png">

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <!-- Global Ripple Loading -->
  <div id="global-loading"
      class="loading-overlay hidden">
    <svg
      class="ripple-svg"
      width="160"
      height="160"
      viewBox="0 0 160 160"
      aria-hidden="true"
    >
      <circle class="ripple ripple-1 text-primary"
              cx="80" cy="80" r="70" />
      <circle class="ripple ripple-2 text-accent"
              cx="80" cy="80" r="70" />
      <circle class="ripple ripple-3 text-base-content/25"
              cx="80" cy="80" r="70" />
    </svg>
  </div>

  <body class="bg-base-200 min-h-screen flex flex-col font-sans"
        data-controller="global-loading"
        style="
          background: linear-gradient(
            180deg,
            var(--color-base-200) 0%,
            color-mix(
              in oklab,
              var(--color-base-100) 85%,
              var(--color-primary) 15%
            ) 100%
          );
        "
      >

    <%= render 'shared/header' %>

    <%= turbo_frame_tag 'flash_area' do %>
      <%= render 'shared/flash' %>
    <% end %>

    <main class="flex-grow">

      <% if controller_name == "static_pages" && action_name == "top" %>
        <!-- TOPページだけフル幅 -->
        <%= yield %>
      <% else %>
        <!-- その他（ログインページ、home、habitログ、全部） -->
        <div class="flex justify-center">
          <div class="w-full max-w-md px-4 py-6">
            <%= yield %>
          </div>
        </div>
      <% end %>

    </main>

    <% if user_signed_in? %>
      <%= render "shared/footer_signed_in" %>
    <% end %>

    <%= render "shared/footer_copyright" %>
    <!-- 共通Turboフレーム -->
    <%= turbo_frame_tag 'modal' %>
  </body>
</html>
